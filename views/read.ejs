<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div>
    <a href="/">Back to home</a>
    <h1>All Users</h1>
    <div class="users">
      <% if(users.length > 0){ %>
        <% users.forEach(function(e) { %> 
          <div>
            <div>
              <img src="<%= e.image %>" alt=""> 
            </div>
            <h3><%= e.name %></h3>
            <h5><%= e.email %></h5> 
            <div class="flex gap-3">
              <a href="">Edit User</a>
              <a href="/delete/<%= e._id %>">Delete User</a>
            </div> 
          </div>
        <% }) %>
      <% } else{ %>
          <h3>No users found! Try contacting management at ha159193@gmail.com</h3>
      <% } %>
      
    </div>
  </div>
</body>
</html>
